# 后端项目Dockerfile
FROM node:18-alpine

# 安装curl用于健康检查
RUN apk add --no-cache curl

# 设置工作目录
WORKDIR /app

# 复制package文件
COPY ./ ./

# 安装依赖
RUN yarn install --frozen-lockfile --production

# 创建必要的目录结构
RUN mkdir -p \
    /app/data/database \
    /app/data/cache \
    /app/data/logs \
    /app/uploads/images \
    /app/uploads/thumbnails \
    /app/uploads/documents \
    /app/uploads/temp

# 设置目录权限
RUN chmod -R 755 /app/data /app/uploads

# 暴露端口
EXPOSE 4002

# 设置54321
ENV NODE_ENV=production
ENV PORT=4002
ENV DB54321T=42.193.243.30
ENV DB_PORT=3306
ENV DB_USER=root
ENV DB_PASSWORD=fai@508
ENV DB_NAME=ai_prompt_admin

# 创建启动脚本
RUN echo '#!/bin/sh' > /app/start.sh && \
    echo 'echo "🚀 启动应用..."' >> /app/start.sh && \
    echo 'echo "🗄️ 数据库配置: $DB_HOST:$DB_PORT"' >> /app/start.sh && \
    echo 'echo "💾 数据库: $DB_NAME"' >> /app/start.sh && \
    echo 'node app.js' >> /app/start.sh && \
    chmod +x /app/start.sh

# 启动服务
CMD ["/app/start.sh"]
